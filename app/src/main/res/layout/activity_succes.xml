<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/gift_container"

    tools:context=".Succes">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView2"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_150sdp"
                app:lottie_rawRes="@raw/animation_gift"
                android:layout_marginTop="@dimen/_20sdp"
                app:lottie_autoPlay="true"

                android:layout_gravity="center"
                app:lottie_loop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_30ssp"
                android:fontFamily="@font/font2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#4CAF50"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/tabriklaymiz" /> <!-- Stack TextView below animationView2 -->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_250sdp"
                app:lottie_rawRes="@raw/celebrate"
                app:lottie_autoPlay="true"
                android:layout_gravity="center"
                app:lottie_loop="true" /> <!-- Stack animationView below animationView2 -->
        </LinearLayout>










</FrameLayout>