<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    tools:context=".ParentFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/portfoilo_list"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:clickable="true"

            android:foreground="?selectableItemBackground"

            app:cardCornerRadius="24dp"
            app:cardElevation="24dp"


            tools:targetApi="p">
            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/fonnn"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#587BF9"
                android:text="@string/list_mutaxasis"
                />


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/xususiy_markaz_list"
            android:layout_width="350dp"
            android:layout_height="100dp"
            app:cardCornerRadius="24dp"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardElevation="24dp"
            android:layout_marginTop="30dp"

            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/fonnn"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#587BF9"
                android:text="@string/oquvmarkaz_list"
                />


        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bogcha_list"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="24dp"
            app:cardElevation="24dp"
            android:layout_marginTop="30dp"

            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/fonnn"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#587BF9"
                android:text="@string/bogcha_list"
                />


        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/maktab_list"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="24dp"
            app:cardElevation="24dp"
            android:layout_marginTop="30dp"

            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/fonnn"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#587BF9"
                android:text="@string/maktab_list"
                />


        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>







