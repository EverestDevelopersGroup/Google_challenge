<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Sigh_Fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"


        >










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"



        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sham_pufla"
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:rippleColor="#2CAC32"
            app:strokeWidth="1dp"
            app:strokeColor="#2F4CEF"
            android:outlineAmbientShadowColor="#020202"
            android:outlineSpotShadowColor="#020202"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FFE0B2"
            app:cardElevation="30dp"
            tools:targetApi="p">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="26sp"
                android:fontFamily="@font/asosiy_fon"
                android:textColor="@color/black"
                android:text="@string/shamni_pufla"
                />




        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/parrak_aylan"
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:rippleColor="#2CAC32"
            app:strokeWidth="1dp"
            app:strokeColor="#2F4CEF"
            android:foreground="?selectableItemBackground"
            android:outlineAmbientShadowColor="#020202"
            android:outlineSpotShadowColor="#020202"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FFB6B1"
            app:cardElevation="30dp"
            tools:targetApi="p">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="26sp"
                android:fontFamily="@font/asosiy_fon"
                android:textColor="@color/black"
                android:text="@string/parrakni_aylantir"
                />




        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:rippleColor="#2CAC32"
            app:strokeWidth="1dp"
            app:strokeColor="#2F4CEF"
            android:foreground="?selectableItemBackground"
            android:outlineAmbientShadowColor="#020202"
            android:outlineSpotShadowColor="#020202"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="@dimen/_40sdp"
            app:cardBackgroundColor="#C9E1E4"
            app:cardElevation="30dp"
            tools:targetApi="p">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="26sp"
                android:fontFamily="@font/asosiy_fon"
                android:textColor="@color/black"
                android:text="@string/pufakchani_uchir"
                />




        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:clickable="true"
            app:rippleColor="#2CAC32"
            app:strokeWidth="1dp"
            app:strokeColor="#2F4CEF"
            android:foreground="?selectableItemBackground"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="#020202"
            android:outlineSpotShadowColor="#020202"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="@dimen/_40sdp"
            app:cardBackgroundColor="#AFD2A7"
            app:cardElevation="30dp"
            tools:targetApi="p">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="26sp"
                android:fontFamily="@font/asosiy_fon"
                android:textColor="@color/black"
                android:text="@string/futbol_koptogi"
                />




        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:rippleColor="#2CAC32"
            app:strokeWidth="1dp"
            app:strokeColor="#2F4CEF"
            android:foreground="?selectableItemBackground"
            android:outlineAmbientShadowColor="#020202"
            android:outlineSpotShadowColor="#020202"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="@dimen/_40sdp"
            app:cardBackgroundColor="#F4B2FF"
            app:cardElevation="30dp"
            tools:targetApi="p">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="26sp"
                android:fontFamily="@font/asosiy_fon"
                android:textColor="@color/black"
                android:text="@string/gulni_hidla"
                />




        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>


    </ScrollView>






</LinearLayout>