<?xml version = "1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".Activities.StartRegister">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/back_splash"
        android:gravity="center"
        >







        <ImageView
            android:id="@+id/idIVLogo"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_270sdp"
            android:layout_gravity="center"
            android:src="@drawable/img_14" />







    </LinearLayout>



    <com.ahmedteleb.buttons3d.Button3d
        android:id="@+id/boshlash"
        android:layout_width="220dp"
        android:layout_height="60dp"
        app:buttonColor="#587BF9"
        android:shadowColor="#8BC34A"
        android:gravity="center"
        android:layout_gravity="center"
        app:shadowEnabled="true"

        android:text="@string/qani_boshladikmi"
        android:textColor = "@color/white"
        android:textSize="17sp"
        android:longClickable="true"
        android:clickable="true"

        android:fontFamily="@font/font2"
        android:layout_marginTop="30dp"
        app:shadowHeight="@dimen/_7sdp"
        app:cornerRadius="@dimen/_10sdp"


        android:focusable="true" />






</LinearLayout>
